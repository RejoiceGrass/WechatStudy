<view class="out">
  <view class="row" wx:for="{{resData}}" wx:key="index">
    <view class="pic">
      <image src="{{item.picurl}}"></image>
    </view>
    <view class="text">
      <view class="title">{{item.title}}</view>
      <view class="time">{{item.posttime}} - {{item.author}}</view>
    </view>
  </view>
  <view>
    <button bindtap="pageNextBtn">下一页</button>   <button bindtap="pageForBtn">上一页</button>
    <button bindtap="IndexPage">首页</button>
  </view>
  
</view>